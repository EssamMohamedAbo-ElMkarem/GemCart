<div id="<%= dom_id order %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Customre email:</strong>
    <%= order.customre_email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Fulfilled:</strong>
    <%= order.fulfilled %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Total:</strong>
    <%= order.total %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address:</strong>
    <%= order.address %>
  </p>
  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="py-2 inline-block min-w-full">
        <h1>Products</h1>
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
              <tr>
                <th scope="col" class="text-sm font-median text-gray-800
                px-6 py-4 text-left">
                Product Name
                </th>
                <th scope="col" class="text-sm font-median text-gray-800
                px-6 py-4 text-left">
                Size
                </th>
                <th scope="col" class="text-sm font-median text-gray-800
                px-6 py-4 text-left">
                Quantity
                </th>
                <tr>
              </tr>
            </thead>
            <tbody>
              <% if order.order_products.any? %>
                <% order.order_products.each do |op|%>
                  <tr class="bg-gray-50border-b">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 underline">
                      <%= link_to op.product.name, [:admin, op.product], class: "underline" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 ">
                      <%= op.size %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 ">
                      <%= op.quantity%>
                    </td>
                  </tr>
                <%end%>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
